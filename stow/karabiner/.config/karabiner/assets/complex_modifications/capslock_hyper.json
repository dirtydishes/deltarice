{
  "title": "Caps Lock Hyper",
  "rules": [
    {
      "description": "Caps Lock → Hyper (⌃⌥⌘⇧), Escape if tapped",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_control", "left_option", "left_command"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
